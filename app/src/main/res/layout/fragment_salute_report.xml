<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/report_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginBottom="@dimen/x_small_margin"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Sample Report Title" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#00FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:tint="#474747"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activityDescTitle"
                android:text="@string/activity_title_text"
                style="@style/ReportListTitle" />

            <TextView
                android:id="@+id/content"
                tools:text="Here is a sample activity desc.\nHere is line #2 of that description."
                style="@style/ReportListValue" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/timeTitle"
                android:text="@string/time_title_text"
                style="@style/ReportListTitle" />

            <TextView
                android:id="@+id/time"
                tools:text="2020/03/25 1500 EDT"
                style="@style/ReportListValue" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/createdTitle"
                android:text="@string/created_title_text"
                style="@style/ReportListTitle" />

            <TextView
                android:id="@+id/created"
                tools:text="2020/03/25 1500 EDT"
                style="@style/ReportListValue" />

        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="?android:attr/listDivider" />

</LinearLayout>
