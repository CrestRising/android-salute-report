<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TabStyle.Light" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance.Dark</item>
        <item name="tabSelectedTextColor">@color/darkGunmetal</item>
    </style>

    <style name="TabStyle.Dark" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance.Light</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabStyle.Dark.Serif">
        <item name="tabTextAppearance">@style/TabTextAppearance.Light.Serif</item>
    </style>

    <style name="TabTextAppearance.Dark" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/darkGunmetal_87</item>
    </style>

    <style name="TabTextAppearance.Light" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="TabTextAppearance.Light.Serif">
        <item name="android:textColor">@color/white_87</item>
        <item name="android:fontFamily">serif</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextViewStyle.Serif" parent="android:Widget.TextView">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextViewStyle.Condensed" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <style name="EditText">
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="NextButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_gravity">end</item>
        <item name="android:text">@string/next_button_text</item>
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <style name="PaletteItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:minHeight">418dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/gray_87</item>
        <item name="android:breakStrategy" tools:targetApi="m">balanced</item>
    </style>

    <style name="TextSample">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="TextSample.Inverse">
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
    </style>

    <style name="ViewSample">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ViewSample.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewSample.Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="ReportDetailsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/x_small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/illiniTextColorPrimaryInverse</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ReportDetailsValueText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkGunmetal_87</item>
        <item name="android:padding">@dimen/x_small_margin</item>
        <item name="android:text">Sample value...</item>
    </style>

    <style name="ReportListTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/x_small_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReportListValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/x_small_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

</resources>
